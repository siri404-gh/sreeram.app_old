{
  "name": "sreeram.app",
  "version": "1.0.0",
  "description": "Sreeram Padmanabhan's personal website",
  "main": "src/web/index.js",
  "scripts": {
    "build": "webpack --env=prod --config=webpack/webpack.config.js",
    "build:dev": "webpack --env=dev --config=webpack/webpack.config.js",
    "build:devserver": "webpack-dev-server --open --env=dev --config=webpack/webpack.config.js",
    "test": "karma start",
    "lint:local": "eslint .",
    "commit": "git-cz",
    "docker": "docker-compose -f docker-compose-web.yml up",
    "lighthouse": "mkdir dist && lighthouse",
    "lighthouse:ci": "lighthouse-ci",
    "firebase:deploy": "firebase deploy --token $FIREBASE_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sreerampr/sreeram.app.git"
  },
  "author": "Sreeram Padmanabhan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sreerampr/sreeram.app/issues"
  },
  "homepage": "https://github.com/sreerampr/sreeram.app#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.2.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.3",
    "firebase-tools": "^4.0.2",
    "heroku": "^7.7.8",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.13",
    "lighthouse": "^3.0.3",
    "lighthouse-ci": "git+https://github.com/ebidel/lighthouse-ci.git",
    "node-notifier-cli": "^1.1.2",
    "react-hot-loader": "^4.3.4",
    "react-styleguidist": "^7.1.3",
    "webpack": "^4.16.3",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.3",
    "workbox-webpack-plugin": "^3.4.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "promise-polyfill": "8.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "whatwg-fetch": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "./node_modules/.bin/notify -t 'sreeram.app' -m 'Are you being a responsible commitizen?'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "./node_modules/.bin/notify -t 'sreeram.app' -m 'Commit Successful' -s Glass"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
